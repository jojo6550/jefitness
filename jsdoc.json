{
  "source": {
    "include": ["src"],
    "includePattern": "\\.(js|ts)$",
    "exclude": ["node_modules", "tests", "public", "docs"]
  },
  "opts": {
    "destination": "docs",
    "recurse": true,
    "readme": "README.md"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
}
