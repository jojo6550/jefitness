# MongoDB Configuration
MONGO_URI=mongodb+srv://admin:password@cluster.mongodb.net/?retryWrites=true&w=majority

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=10000
NODE_ENV=development
FRONTEND_URL=http://localhost:10000

# Email Service (Mailjet)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=your_email@example.com

# ========================================
# STRIPE CONFIGURATION (SUBSCRIPTION SYSTEM)
# ========================================

# Stripe API Keys
# Get these from: https://dashboard.stripe.com/developers/api
# Make sure you're in TEST MODE for development!
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_publishable_key_here

# Stripe Price IDs for Each Subscription Plan
# Create products in Stripe Dashboard: https://dashboard.stripe.com/test/products
# Then copy the Price IDs for each tier
STRIPE_PRICE_1_MONTH=price_test_1month_id_here
STRIPE_PRICE_3_MONTH=price_test_3month_id_here
STRIPE_PRICE_6_MONTH=price_test_6month_id_here
STRIPE_PRICE_12_MONTH=price_test_12month_id_here

# Stripe Webhook Secret
# Get this from: https://dashboard.stripe.com/test/webhooks
# After creating your webhook endpoint
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# ========================================
# Optional Features
# ========================================

# Encryption Keys (for sensitive user data)
ENCRYPTION_KEY=your_encryption_key_here
SIGNING_KEY=your_signing_key_here

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Cron Job Schedule
CRON_SCHEDULE=*/30 * * * *
CLEANUP_TIME=30
